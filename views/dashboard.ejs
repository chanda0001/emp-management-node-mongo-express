<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .menu-bar {
            background-color: yellow;
            padding: 10px;
            font-weight: bold;
        }

        .content {
            background-color: #f5f5f5;
            padding: 30px;
        }

        .nav-link.active {
            font-weight: bold;
            color: #0d6efd;
            /* Bootstrap blue */
            text-decoration: underline;
        }
    </style>
</head>

<body>

    <!-- Navbar Header -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light border">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="/home">Logo</a>
            <div class="collapse navbar-collapse justify-content-center">
                <ul class="navbar-nav mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/" id="nav-home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/employee" id="nav-employee">Employee List</a>
                    </li>
                </ul>
            </div>
            <div class="d-flex align-items-center">
                <span class="me-2" id="userName"></span>
                <a href="#" class="btn btn-link p-0" onclick="logout()">Logout</a>
            </div>
        </div>
    </nav>

    <!-- Menu Bar -->
    <div class="menu-bar">
        Dashbord
    </div>

    <!-- Content Section -->
    <div class="content text-center">
        <h2 class="fw-bold">Welcome Admin Panel</h2>
        <p id="welcomeText"></p>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const user = localStorage.getItem('userName') || "";
        document.getElementById('welcomeText').innerText = `Welcome, ${user}`;
    </script>
    <script src="/js/employee.js"></script>
</body>

</html>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Create Employee</title>
    <link rel="stylesheet" href="/css/login.css" />
</head>

<body>

    <!-- Header -->
    <div class="header1">
        <div class="left">Logo</div>
        <div class="center">
            <a href="/">Home</a>
            <a href="/employees">Employee List</a>
        </div>
        <div class="right">
            <div id="userName">User</div>
            <div><a href="#" onclick="logout()">Logout</a></div>
        </div>
    </div>
    <!-- Menu -->
    <div class="menu">Edit Employee</div>

    <!-- Form Section -->
    <div class="container">

        <form id="employeeEditForm" method="POST" action="/employee/edit/<%= employee._id %>"
            enctype="multipart/form-data">

            <div class="form-row">
                <label>Name</label>
                <input type="text" name="name" value="<%= employee.name %>" required />
            </div>
            <div class="form-row">
                <label>Email</label>
                <input type="email" name="email" value="<%= employee.email %>" required />
            </div>
            <div class="form-row">
                <label>Mobile No</label>
                <input type="text" name="mobile" value="<%= employee.mobileNo %>" pattern="\d{10}" required />
            </div>
            <div class="form-row">
                <label>Designation</label>
                <select name="designation">
                    <option value="HR" <%=employee.designation==='HR' ? 'selected' : '' %>>HR</option>
                    <option value="Manager" <%=employee.designation==='Manager' ? 'selected' : '' %>>Manager</option>
                    <option value="Sales" <%=employee.designation==='Sales' ? 'selected' : '' %>>Sales</option>
                </select>
            </div>
            <div class="form-row">
                <label>Gender</label>
                <label>
                    <input type="radio" name="gender" value="M" <%=employee.gender==='M' ? 'checked' : '' %> required />
                    M
                </label>
                <label>
                    <input type="radio" name="gender" value="F" <%=employee.gender==='F' ? 'checked' : '' %> /> F
                </label>
            </div>
            <div class="form-row">
                <label>Course</label>
                <label>
                    <input type="checkbox" name="course" value="MCA" <%=employee.course &&
                        employee.course.includes('MCA') ? 'checked' : '' %> /> MCA
                </label>
                <label>
                    <input type="checkbox" name="course" value="BCA" <%=employee.course &&
                        employee.course.includes('BCA') ? 'checked' : '' %> /> BCA
                </label>
                <label>
                    <input type="checkbox" name="course" value="BSC" <%=employee.course &&
                        employee.course.includes('BSC') ? 'checked' : '' %> /> BSC
                </label>
            </div>
            <div class="form-row">
                <label>Img Upload</label>
                <input type="file" name="image" accept="image/png, image/jpeg" />
            </div>
            <div class="submit-row">
                <button type="submit">Udate</button>
            </div>
        </form>
    </div>

    <script>
        const user = localStorage.getItem('userName') || 'Admin';
        document.getElementById("userName").innerText = user;
    </script>

    <script src="/js/employee.js"></script>
</body>

</html>
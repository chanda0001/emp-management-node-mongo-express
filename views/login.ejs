<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .menu-bar {
            font-weight: bold;
            display: flex;
            font-size: x-large;
        }

        .login-box {
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
            margin: 40px auto;
        }

        .btn-login {
            background-color: #90ee90;
            font-weight: bold;
            font-size: 18px;
        }

        body {
            background-color: #f1f1f1;
        }
    </style>
</head>

<body>

    <!-- Header -->
    <div class="container mt-3">
        <div class="text-start fw-bold py-2 px-3">Logo</div>
    </div>

    <!-- Login Form -->
    <div class="login-box shadow">
        <div class="menu-bar justify-content-center">Login</div>
        <form id="loginForm">
            <div class="mb-3">
                <label for="username" class="form-label">User Name</label>
                <input type="text" class="form-control bg-light-subtle" id="userName" name="userName" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control bg-light-subtle" id="password" name="password" required>
            </div>
            <button type="submit" class="btn btn-login w-100 mt-3 rounded">Login</button>
        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/login.js"></script>

    <script type="text/javascript">
        document.addEventListener('DOMContentLoaded', function () {
            const user = localStorage.getItem('userName') || '';
            if (user === '') {
                // window.location.href = "/login.html";
            } else {
                window.location.href = '/home';
            }
        });
    </script>
</body>

</html>